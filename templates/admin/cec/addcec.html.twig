{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminCECController!{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="mt-3">Ajouter un centre d'état civil !</h2>

        {# Affichage du formulaire créé avec symfony#}
        {{ form_start(form) }}
        <div class="alert alert-light">
            <div class="row">
                <div class="col">
                    {{ form_row(form.libelle) }}
                </div>
                <div class="col">
                    {{ form_row(form.arrondissement) }}
                </div>
            </div>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-check"></i>
                Enregistrer le centre d'état civil
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
