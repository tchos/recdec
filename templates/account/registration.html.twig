{% extends 'base.html.twig' %}

{% block title%}Inscription{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="mt-3">Inscrire un nouvel utilisateur !</h2>

        {# Affichage du formulaire créé avec symfony#}
        {{ form_start(form) }}
            <div class="alert alert-light">
                <div class="row">
                    <div class="col">
                        {{ form_row(form.fullName) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.equipe) }}
                    </div>
                </div> 
            </div>
            <div class="alert alert-light">
                <div class="row">
                    <div class="col">
                        {{ form_row(form.hash) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.passwordConfirm) }}
                    </div>
                </div>
            </div>        
            <div class="row">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check"></i>
                    Confimez l'inscription
                </button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}