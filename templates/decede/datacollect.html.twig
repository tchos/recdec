{% extends 'base.html.twig' %}

{% block title %}Données collectées par équipe{% endblock %}

{% block body %}
    <div class="container-fluid my-3">
        <div class="row">
            <div class="col">
                <div class="alert alert-secondary">
                    <h3 class="alert-heading my-3">
                        <i class="fas fa-arrow-up"></i>
                        Statistiques des données collectées par équipe
                    </h3>
                    <table class="table table-hover">
                        <thead>
                        <tr class="table-primary">
                            <th class="text-center"><i class="fas fa-sort-up"></i> Rang</th>
                            <th><i class="fas fa-address-card"></i> Equipes</th>
                            <th class="text-center"><i class="fas fa-coins"></i> Nbre de décédés enregistrés</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set rang = 1 %}
                        {% for statEquipe in collecte %}
                            <tr>
                                <td class="text-center">{{ rang }}</td>
                                <td>
                                    {% if rang < 4 %}
                                        <i class="fas fa-star note"></i>
                                    {% endif %}
                                    {{ statEquipe.equipe }}
                                </td>
                                <td class="text-center">{{ statEquipe.compteur }}</td>
                            </tr>
                            {% set rang = rang + 1 %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
