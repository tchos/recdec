{% extends 'base.html.twig' %}

{% block title %}Accueil !{% endblock %}

{% block body %}
    <div class="container my-4">
        <div class="jumbotron">
            <h1 class="display-3">Hello, bienvenue !</h1>
            <p class="lead">
                Opération de recencement des agents publics et pensionnés décédés.
            </p>
            <hr class="my-4">
            <p>
                Cette application vous permet d'enregistrer les informations sur les agents publics 
                et pensionnés décédés telles que portées sur les actes de décès collectés.
            </p>
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="{{ path('acte_create') }}" role="button">
                    <i class="fas fa-laptop"></i>
                    Commencer la saisie !
                </a>
            </p>
        </div>

        <h2 class="my-5 text-primary">Les meilleurs agents de saisies</h2>

        <div class="row">
            {% for user in bestUsers %}
                <div class="col-md-4">
                    <div class="card border-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header bg-primary">
                            <span class="text-white font-weight-bold">Total des saisies:</span>
                            <span class="badge badge-dark float-right">{{ user.compteur }}</span>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">
                                <img src="images/user-black.png" alt="" class="float-left mr-3 avatar-mini">
                                {{ user.fullName }} 
                                <span class="float-right mr-2"><i class="fas fa-thumbs-up"></i></span>
                            </h4>
                            <hr>
                            <p class="card-text">Equipe: {{ user.libelle }}</p>
                        </div>
                        <div class="card-footer">
                            {% set note = user.compteur / 30 %}
                            {% include 'partials/note.html.twig' with {'note': note} %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <h2 class="my-5 text-danger">Les pires agents de saisies</h2>

        <div class="row">
            {% for user in worstUsers %}
                <div class="col-md-4">
                    <div class="card border-danger mb-3" style="max-width: 20rem;">
                        <div class="card-header bg-danger">
                            <span class="text-white font-weight-bold">Total des saisies:</span>
                            <span class="badge badge-dark float-right">{{ user.compteur }}</span>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">
                                <img src="images/user-black.png" alt="" class="float-left mr-3 avatar-mini">
                                {{ user.fullName }}
                                <span class="float-right mr-2"><i class="fas fa-thumbs-down"></i></span>
                            </h4>
                            <hr>
                            <p class="card-text">Equipe: {{ user.libelle }}</p>
                        </div>
                        <div class="card-footer">
                            {% set note = user.compteur / 30 %}
                            {% include 'partials/note.html.twig' with {'note': note} %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
